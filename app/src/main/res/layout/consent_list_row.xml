<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/_5sdp"
    app:cardCornerRadius="@dimen/_5sdp"
    app:cardElevation="@dimen/_5sdp"
    android:layout_height="wrap_content">

   <LinearLayout
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <TextView
               android:id="@+id/txtrequestername"
               android:textStyle="bold"
               android:fontFamily="@font/poppinsmedium"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_margin="@dimen/_5sdp"
               android:textSize="@dimen/_15sdp"/>
           <TextView
               android:fontFamily="@font/poppinsregular"
               android:layout_alignParentRight="true"
               android:id="@+id/txtStatus"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_margin="@dimen/_5sdp"
               android:textSize="@dimen/_12sdp"/>
       </RelativeLayout>
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_margin="@dimen/_5sdp"
               android:layout_marginStart="@dimen/_10sdp"
               android:layout_marginTop="@dimen/_10sdp"
               android:layout_marginEnd="@dimen/_10sdp"
               android:layout_marginBottom="@dimen/_10sdp"
               android:fontFamily="@font/poppinsmedium"
               android:text="Type of Request"
               android:textSize="@dimen/_12sdp" />
           <TextView
               android:paddingLeft="@dimen/_5sdp"
               android:paddingRight="@dimen/_5sdp"
               android:background="@color/lightt_yellow_bg"
               android:text="Consent"
               android:fontFamily="@font/poppinsregular"
               android:layout_alignParentRight="true"
               android:id="@+id/txtRequestType"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_margin="@dimen/_5sdp"
               android:textSize="@dimen/_12sdp"/>
       </RelativeLayout>
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_margin="@dimen/_5sdp"
               android:layout_marginStart="@dimen/_10sdp"
               android:layout_marginTop="@dimen/_10sdp"
               android:layout_marginEnd="@dimen/_10sdp"
               android:layout_marginBottom="@dimen/_10sdp"
               android:fontFamily="@font/poppinsmedium"
               android:text="Purpose of Request"
               android:textSize="@dimen/_12sdp" />
           <TextView
               android:fontFamily="@font/poppinsregular"
               android:layout_alignParentRight="true"
               android:id="@+id/txtPerpose"
               android:textStyle="bold"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_margin="@dimen/_5sdp"
               android:textSize="@dimen/_12sdp"/>
       </RelativeLayout>
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <TextView
               android:fontFamily="@font/poppinsmedium"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_margin="@dimen/_5sdp"
               android:layout_marginStart="@dimen/_10sdp"
               android:layout_marginTop="@dimen/_10sdp"
               android:layout_marginEnd="@dimen/_10sdp"
               android:layout_marginBottom="@dimen/_10sdp"
               android:text="Access Till"
               android:textSize="@dimen/_12sdp"/>
           <TextView
               android:fontFamily="@font/poppinsregular"
               android:layout_alignParentRight="true"
               android:id="@+id/txtPeriod"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_margin="@dimen/_5sdp"
               android:textSize="@dimen/_12sdp"/>
       </RelativeLayout>
   </LinearLayout>
</androidx.cardview.widget.CardView>