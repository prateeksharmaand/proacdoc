<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    style="?attr/materialCardViewFilledStyle"
    android:layout_width="@dimen/_120sdp"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    android:clickable="true"
    android:minWidth="@dimen/_120sdp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="@dimen/_5sdp"

    app:cardElevation="@dimen/_5sdp"


    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"

        android:orientation="vertical"


        >


        <TextView

            android:id="@+id/testName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsmedium"
            android:maxLines="2"
            android:minLines="2"
            android:text="tyhgffdddddddd\ngggggg"

            android:textColor="@android:color/black"
            android:textSize="@dimen/_12sdp" />


        <TextView


            android:id="@+id/testCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsmedium"
            android:text="12 tests"

            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/_10sdp" />

        <TextView
android:visibility="gone"
            android:id="@+id/testDiscount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:fontFamily="@font/poppinsmedium"
            android:text="10% discount"

            android:textColor="@color/green"
            android:textSize="@dimen/_10sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView

                android:id="@+id/testDiscuntedrate"
                android:layout_width="0dp"
                android:layout_weight="0.50"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsmedium"

                android:text="INR 200"

                android:textColor="@android:color/black"
                android:textSize="@dimen/_10sdp" />
            <TextView
                android:visibility="gone"
                android:id="@+id/testRate"
                android:gravity="right"
                android:layout_width="0dp"
                android:layout_weight="0.50"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsmedium"

                android:text="INR 200"

                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/_10sdp" />
        </LinearLayout>
        <com.google.android.material.button.MaterialButton
            android:clickable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_baseline_shopping_cart_24"



            android:elevation="@dimen/_3sdp"
            android:fontFamily="@font/poppinsregular"
            android:text="Buy"
            android:textColor="?attr/colorOnPrimary" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>